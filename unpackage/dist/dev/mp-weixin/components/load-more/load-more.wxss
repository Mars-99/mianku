
.load-more {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	width: 100%;
	/* height: 100rpx; */
	text-align: center;
	line-height: 100rpx;
	color: #999;
	/* background-color: #f5f5f5; */
}
.mix-load-icon {
	margin-right: 12rpx;
	-webkit-animation: load 0.8s cubic-bezier(.37,1.08,.7,.74) infinite;
	        animation: load 0.8s cubic-bezier(.37,1.08,.7,.74) infinite;
}
.mix-load-text{
	font-size: 28rpx;
	color: #999;
}
@-webkit-keyframes load {
0% {
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100% {
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}

