  position: relative;
  background-color: #333333;
}
.city-item .city-item-name {
  position: absolute;
  width: 100%;
  left: 0;
  top: 45%;
  z-index: 1;
  text-align: center;
  color: #ffffff;
  font-size: 34rpx;
  text-transform: Uppercase;
}
.city-item image {
  width: 100%;
  opacity: 0.5;
}
